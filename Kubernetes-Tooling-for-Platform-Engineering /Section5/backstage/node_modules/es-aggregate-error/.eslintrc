{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": 1,
		"max-lines-per-function": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"AggregateError",
				"CreateDataPropertyOrThrow",
				"CreateMethodProperty",
				"GetIntrinsic",
				"GetIterator",
				"IteratorToList",
				"OrdinarySetPrototypeOf",
			],
		}],
	},
}
