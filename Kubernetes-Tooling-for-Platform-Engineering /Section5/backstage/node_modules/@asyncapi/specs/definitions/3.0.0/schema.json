          }
        },
        "oneOf": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://asyncapi.com/definitions/3.0.0/schema.json"
          }
        },
        "anyOf": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://asyncapi.com/definitions/3.0.0/schema.json"
          }
        },
        "not": {
          "$ref": "http://asyncapi.com/definitions/3.0.0/schema.json"
        },
        "properties": {
