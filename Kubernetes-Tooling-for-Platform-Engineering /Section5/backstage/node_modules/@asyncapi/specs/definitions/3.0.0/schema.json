              "type": "boolean"
            }
          ],
          "default": {}
        },
        "items": {
          "anyOf": [
            {
              "$ref": "http://asyncapi.com/definitions/3.0.0/schema.json"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "http://asyncapi.com/definitions/3.0.0/schema.json"
              }
            }
          ],
          "default": {}
        },
        "allOf": {
