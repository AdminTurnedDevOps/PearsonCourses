{
    "compilerOptions": {
        "declaration": false,
        "outDir": "./dist/",
        "module": "es2015",
        "target": "es2015",
        "allowJs": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "lib": ["DOM", "ES2018"]
    },
    "include": ["index.ts", "lib/**/*"]
}
